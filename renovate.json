      "groupName":"JavaScriptEngineSwitcher monorepo"
    },
    {
      "sourceUrlPrefixes": ["https://github.com/rollup/rollup", "https://github.com/rollup/plugins"],
      "groupName":"rollup monorepo"
    }
  ]
